mixin icon(iconName, iconClass)
    svg(class=`${iconClass}`)
        use(xlink:href=`/images/icons/sprite.svg#${iconName}`)

mixin iconPath(iconPath,iconName, iconClass)
    svg(class=`${iconClass}`)
        use(xlink:href=`${iconPath}/sprite.svg#${iconName}`)

mixin image(imagePath, imageClass, imageAlt)
    if !imageAlt
        - var alt = 'lorem'
    else
        - var alt = imageAlt
    img(src=`${imagePath}`, alt=`${alt}`, class=`${imageClass}`)

mixin banner(img)
    .banner
        .banner__container
            .banner__img
                +image(img)
            .banner__wrap
                .banner__sub ДОМ МОДЫ LEONID GRIVKO
                h2.banner__title
                    | Костюмы ручной работы
                    br
                    | для женщин и мужчин.
                .banner__txt
                    | по индивидуальным меркам
                    br
                    | с гарантией идеальной посадки