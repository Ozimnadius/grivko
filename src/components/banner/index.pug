div(class=props.dopCls).banner
    .banner__slider
        .banner__swiper.swiper
            .swiper-wrapper
                each i in [1,2,3]
                    .swiper-slide.banner__slide
                        .banner__img
                            picture
                                source(srcset=props.imgPath + 'img375.jpg' media='(max-width: 767.98px)')
                                source(srcset=props.imgPath + 'img768.jpg' media='(max-width: 1279.98px)')
                                source(srcset=props.imgPath + 'img1280.jpg' media='(max-width: 1919.98px)')
                                img(src=props.imgPath + 'img.jpg' alt='')
                        .banner__container
                            .banner__wrap
                                if props.sub
                                    .banner__sub!=props.sub
                                if props.title
                                    h2.banner__title!=props.title
                                if props.txt
                                    .banner__txt!=props.txt
                                if props.big
                                    .banner__big!=props.big
                                if props.btn
                                    a(href="#" class=props.btnCls).btn.banner__btn
                                        span= props.btn
            .banner__pag
            .banner__nav
                a(href="#").banner__prev.banner__arr
                    <svg id="SVGDoc" width="25" height="39" viewBox="0 0 25 39">
                        <path d="M24.5,4.70059v0l-4.5668,-4.5668v0l-19.4332,19.43321v0l19.4332,19.4332v0l4.5668,-4.5668v0l-14.83401,-14.86639v0z" fill="#ffffff" fill-opacity="1"></path>
                    </svg>
                a(href="#").banner__next.banner__arr
                    <?xml version="1.0" encoding="UTF-8"?>
                    <svg id="SVGDoc" width="25" height="39" viewBox="0 0 25 39">
                        <path d="M5.06679,0.13379v0l-4.5668,4.5668v0l14.834,14.8664v0l-14.83401,14.86639v0l4.5668,4.5668v0l19.4332,-19.4332v0z" fill="#ffffff" fill-opacity="1"></path>
                    </svg>
    if props.form
        .banner__form
            form(action="/php/call.php" method="POST" data-action="sign").banner-form.jsAction
                .banner-form__name Записаться на снятие мерок
                .banner-form__wrap
                    .banner-form__form
                        .banner-form__fields
                            .banner-form__field
                                input(type="text" name="name" placeholder="Имя" data-rule-required="true" data-msg-required="Заполните Имя").input
                            .banner-form__field
                                input(type="tel" name="tel" placeholder="Телефон" data-rule-required="true" data-msg-required="Введите телефон" data-msg-tel="Введите ваш телефон").input
                            .banner-form__field.banner-form__field--double
                                input(type="text" name="datetime" placeholder="Напишите удобный день и время").input
                        button(type='submit').btn.btn--black.banner-form__submit
