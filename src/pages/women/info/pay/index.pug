extends ../../../../main

block variables
    - var title = 'Готовые коллекции'
    - var isWomen = true

block content
    main.page
        //- desc
        section.page__desc
            .container
                .page-desc
                    h2.page-desc__title.title.title--line Условия оплаты
                    .page-desc__breadcrumbs
                        include ../../../../components/breadcrumbs/index
        //- pay
        section.page__pay.mb80
            .container
                include ../../../../components/pay/index

        //- subscribe
        section.page__subscribe
            .container
                -
                    var props = {
                        title: "Подпишитесь на рассылку, мы расскажем много интересного.",
