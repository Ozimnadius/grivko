extends ../../../../main

block variables
    - var title = 'Готовые коллекции'
    - var isWomen = true

block content
    main.page
        //- desc
        section.page__desc
            .container
                .page-desc
                    h2.page-desc__title.title.title--line Условия оплаты
                    .page-desc__breadcrumbs
                        include ../../../../components/breadcrumbs/index
        //- pay
        section.page__pay.mb80
            .container
                .pay
                    each i,x in ["Оплатить заказ можно наличными или банковской картой в момент приобретения вещей непосредственно в бутике по адресу: г. Москва, Пушкарев переулок, 5.","Оплатить можно наличными или безналичным платежом онлайн (банковской картой) для жителей Москвы и МО курьеру в момент получения посылки.","Для покупателей других регионов России и зарубежных стран оплату заказа необходимо произвести по безналичному расчету онлайн (банковской картой)"]
                        .pay__item
                            .pay__icon
                                img(src="/images/content/women/about/pay/"+(x+1)+".svg" alt="lorem")
                            .pay__txt= i

        //- subscribe
        section.page__subscribe
            .container
                include ../../../../components/subscribe/index

